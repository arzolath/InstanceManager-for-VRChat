<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InstanceManager.App.ViewModels"
             x:Class="InstanceManager.App.Views.BlockListsView"
             x:DataType="vm:BlockListsViewModel">
  <Border Classes="card" Padding="20">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">
      <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="10" VerticalAlignment="Center">
        <Button Grid.Column="0"
                Command="{Binding RefreshVrchatBlocksAsync}"
                IsEnabled="{Binding CanInteract}"
                ToolTip.Tip="Refresh"
                Width="42" Height="42" Padding="0" VerticalAlignment="Center">
          <TextBlock Text="&#xE72C;"
                     FontFamily="Segoe MDL2 Assets"
                     FontSize="16"
                     FontWeight="SemiBold"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        </Button>

        <StackPanel Grid.Column="1" Spacing="4">
          <TextBlock Text="Block List" Classes="heading"/>
          <TextBlock Text="{Binding BlockedCount, StringFormat='VRChat Blocked Users ({0})'}"
                     Classes="muted"/>
        </StackPanel>
      </Grid>

      <Border Grid.Row="1"
              Background="#1AEB5757"
              BorderBrush="{StaticResource Color.Error}"
              BorderThickness="1"
              CornerRadius="8"
              Padding="10"
              IsVisible="{Binding HasError}">
        <TextBlock Text="{Binding Error}"
                   TextWrapping="Wrap" />
      </Border>

      <ScrollViewer Grid.Row="2"
                    VerticalScrollBarVisibility="Auto"
                    Padding="0,0,16,0">
        <ItemsControl ItemsSource="{Binding VrchatBlockedUsers}" Margin="0,0,8,0">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Spacing="8"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Background="{StaticResource Color.SurfaceAlt}"
                      BorderBrush="{StaticResource Color.SubtleBorder}"
                      BorderThickness="1"
                      CornerRadius="10"
                      Padding="12,10">
                <StackPanel Spacing="4">
                  <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" />
                  <TextBlock Text="{Binding UserId}" FontSize="{StaticResource Font.Size.Small}" Classes="muted"/>
                </StackPanel>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Grid>
  </Border>
</UserControl>
