<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InstanceManager.App.ViewModels"
             x:Class="InstanceManager.App.Views.LoginView"
             x:DataType="vm:LoginViewModel">

  <Grid RowDefinitions="*,Auto" Margin="24">

    <!-- Main content -->
    <Border Grid.Row="0"
            Padding="20"
            CornerRadius="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
      <StackPanel Spacing="10" Width="360">
        <TextBlock Text="Login" FontSize="18" FontWeight="SemiBold"/>

        <TextBlock Text="Username"/>
        <TextBox Text="{Binding Username}" />

        <TextBlock Text="Password"/>
        <TextBox Text="{Binding Password}" PasswordChar="â—"/>

        <Button Content="Sign in"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding CanInteract}" />

        <Border Padding="12"
                CornerRadius="10"
                IsVisible="{Binding IsTwoFactorRequired}">
          <StackPanel Spacing="8">
            <TextBlock Text="Two-Factor Authentication" FontWeight="SemiBold"/>

            <TextBlock Text="Method"/>
            <ComboBox ItemsSource="{Binding AvailableTwoFactorMethods}"
                      SelectedItem="{Binding SelectedTwoFactorMethod}" />

            <TextBlock Text="Code"/>
            <TextBox Text="{Binding TwoFactorCode}" />

            <Button Content="Verify"
                    Command="{Binding VerifyTwoFactorCommand}"
                    IsEnabled="{Binding CanInteract}" />
          </StackPanel>
        </Border>

        <ProgressBar IsIndeterminate="True"
                     IsVisible="{Binding IsBusy}" />

        <TextBlock Text="{Binding Error}"
                   IsVisible="{Binding HasError}"
                   TextWrapping="Wrap" />
      </StackPanel>
    </Border>

    <!-- Footer -->
    <Border Grid.Row="1" Padding="10" Margin="0,12,0,0" CornerRadius="12">
      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button Content="arzolath/InstanceManager-for-VRChat"
                Command="{Binding OpenGithub}" />
      </StackPanel>
    </Border>

  </Grid>
</UserControl>
