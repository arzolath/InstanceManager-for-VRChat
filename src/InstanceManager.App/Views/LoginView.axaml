<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InstanceManager.App.ViewModels"
             x:Class="InstanceManager.App.Views.LoginView"
             x:DataType="vm:LoginViewModel">

  <Grid RowDefinitions="*,Auto" Margin="32">

    <!-- Main content -->
    <Border Grid.Row="0"
            Classes="card"
            Padding="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            MaxWidth="520">
      <StackPanel Spacing="14">
        <StackPanel Spacing="4">
          <TextBlock Text="Welcome back" Classes="heading"/>
          <TextBlock Text="Sign in with your VRChat credentials to manage your instances."
                     Classes="muted"/>
        </StackPanel>

        <StackPanel Spacing="6">
          <TextBlock Text="Username" FontWeight="SemiBold"/>
          <TextBox Text="{Binding Username}" Watermark="VRChat username" />
        </StackPanel>

        <StackPanel Spacing="6">
          <TextBlock Text="Password" FontWeight="SemiBold"/>
          <TextBox Text="{Binding Password}" PasswordChar="*" Watermark="Password" />
        </StackPanel>

        <Button Classes="accent"
                Content="Sign in"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding CanInteract}" />

        <Border Padding="14"
                Classes="card"
                IsVisible="{Binding IsTwoFactorRequired}">
          <StackPanel Spacing="10">
            <TextBlock Text="Two-Factor Authentication" FontWeight="SemiBold"/>

            <StackPanel Spacing="6">
              <TextBlock Text="Method" FontWeight="SemiBold"/>
              <ComboBox ItemsSource="{Binding AvailableTwoFactorMethods}"
                        SelectedItem="{Binding SelectedTwoFactorMethod, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel Spacing="6">
              <TextBlock Text="Code" FontWeight="SemiBold"/>
              <TextBox Text="{Binding TwoFactorCode}" Watermark="Enter code" />
            </StackPanel>

            <Button Content="Verify"
                    Command="{Binding VerifyTwoFactorCommand}"
                    IsEnabled="{Binding CanInteract}" />
          </StackPanel>
        </Border>

        <ProgressBar IsIndeterminate="True"
                     IsVisible="{Binding IsBusy}" />

        <Border Background="#1AEB5757"
                BorderBrush="{StaticResource Color.Error}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                IsVisible="{Binding HasError}">
          <TextBlock Text="{Binding Error}"
                     TextWrapping="Wrap" />
        </Border>
      </StackPanel>
    </Border>

    <!-- Footer -->
    <Border Grid.Row="1" Padding="12" Margin="0,16,0,0" Classes="card">
      <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
        <TextBlock Text="Open source on GitHub" Classes="muted"/>
        <Button Content="arzolath/InstanceManager-for-VRChat"
                Command="{Binding OpenGithub}" />
      </StackPanel>
    </Border>

  </Grid>
</UserControl>
